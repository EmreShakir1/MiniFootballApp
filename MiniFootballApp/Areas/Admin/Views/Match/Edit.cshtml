@using MiniFootballApp.Core.Models.Match;

@model MatchFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Result"></label>
                <input asp-for="Result" class="form-control">
                <span asp-validation-for="Result" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsPlayed"></label>
                <select asp-for="IsPlayed" class="form-control">
                    <option value="true">Played</option>
                    <option value="false">Not Played</option>
                </select>
                <span asp-validation-for="IsPlayed" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartingDate"></label>
                <input asp-for="StartingDate" class="form-control">
                <span asp-validation-for="StartingDate" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RefereeName"></label>
                <input asp-for="RefereeName" class="form-control">
                <span asp-validation-for="RefereeName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeTeamId"></label>
                <select asp-for="HomeTeamId" class="form-control">
                    @foreach (var team in Model.Teams)
                    {
                        <option value="@team.Id">@team.Name</option>
                    }
                </select>
                <span asp-validation-for="HomeTeamId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeamId"></label>
                <select asp-for="AwayTeamId" class="form-control">
                    @foreach (var team in Model.Teams)
                    {
                        <option value="@team.Id">@team.Name</option>
                    }
                </select>
                <span asp-validation-for="AwayTeamId" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StadiumId"></label>
                <select asp-for="StadiumId" class="form-control">
                    @foreach (var stadium in Model.Stadiums)
                    {
                        <option value="@stadium.Id">@stadium.Name</option>
                    }
                </select>
                <span asp-validation-for="StadiumId" class="small text-danger"></span>
            </div>
            <div class="text-center">
                <input class="btn btn-primary mt-3 " type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>