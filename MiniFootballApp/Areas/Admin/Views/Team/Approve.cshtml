@using MiniFootballApp.Core.Models.Team;
@model IEnumerable<TeamServiceModel>

@{
    ViewBag.Title = "Approve a Team";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<h4>Teams To Approve</h4>

@if (!Model.Any())
{
    <h2 class="text-center">You have no houses to approve!</h2>
}

<div class="row">
    @foreach (var team in Model)
    {
        @await Html.PartialAsync("/Areas/Admin/Views/Shared/_ApproveTeamPartial.cshtml", team)
    }
</div>
